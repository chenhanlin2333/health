<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="10dp"
        android:background="@android:color/holo_green_light">
        <TextView
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:gravity="center"
            android:text="注册"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/headbackground"
                android:scaleType="centerCrop"
                android:layout_marginBottom="36dp"
                android:layout_marginTop="36dp"/>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="26dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txlogin_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="电话号码"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="26dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txlogin_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="用户名"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:paddingHorizontal="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txlogin_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="26dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txlogin_repassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="再次输入你的密码"
                    android:inputType="textPassword"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="26dp"
                android:textSize="20sp"
                android:text="请选择性别："/>

            <RadioGroup
                android:id="@+id/rg_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                >
                <RadioButton
                    android:id="@+id/rb_man"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="男"/>
                <RadioButton
                    android:id="@+id/rb_woman"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="女"/>
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@android:color/darker_gray"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="26dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txlogin_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="年龄"
                    android:inputType="number"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="26dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txlogin_high"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="身高(cm)"
                    android:inputType="number"
                    android:textSize="20sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="26dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txlogin_wight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="体重(kg)"
                    android:inputType="number"
                    android:textSize="20sp" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="健康状况:"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp">
                <CheckBox
                    android:id="@+id/cb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高血压"/>

                <CheckBox
                    android:id="@+id/cb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="糖尿病"/>
                <CheckBox
                    android:id="@+id/cb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="胃病"/>
            </LinearLayout>


            <Button
                android:id="@+id/bt_regist"
                android:layout_marginTop="36dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:text="注册"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_green_light"/>

            <TextView
                android:id="@+id/tv_gotoLogin"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已注册？去登录"
                android:gravity="center"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>